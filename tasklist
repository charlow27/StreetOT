<body>
    <div id="task-container">
        <h2>üìù Liste de t√¢ches</h2>
        <ul id="task-list"></ul>
    </div>

    <script>
        const taskList = document.getElementById('task-list');
        const tasks = [];

        function addTask(task) {
            if (!tasks.includes(task)) {
                tasks.push(task);
                updateTaskList();
            }
        }

        function toggleTask(index) {
            const taskItem = document.getElementById(`task-${index}`);
            taskItem.classList.toggle('completed');
        }

        function updateTaskList() {
            taskList.innerHTML = '';
            tasks.forEach((task, index) => {
                const li = document.createElement('li');
                li.textContent = task;
                li.id = `task-${index}`;
                li.onclick = () => toggleTask(index);
                taskList.appendChild(li);
            });
        }

        // Simule l'ajout de t√¢ches via le chat Twitch (√† int√©grer avec Twitch API)
        function simulateChatMessage(task) {
            addTask(task);
        }

        // Exemple d'ajout (√† remplacer par un vrai √©v√©nement de chat Twitch)
        setTimeout(() => simulateChatMessage('Faire le caf√© ‚òï'), 2000);
        setTimeout(() => simulateChatMessage('R√©viser le code üìú'), 4000);
    </script>
